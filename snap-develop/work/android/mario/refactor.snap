   .findFiles(file -> file.name.endsWith(".snap"))
   .stream()
   .forEach(file -> refactorFile(file));
   
function refactorFile(file){
   var lines = file.readLines();
   if(lines == null) {
      println(file);
   }
   var builder = new StringBuilder();
   
   lines.stream()
        .map(line -> refactorLine(line))
        .collect(Collectors.toList())
        .stream()
        .forEach(line -> builder.append(line));
        
   return builder.toString();
}

function refactorLine(line){
   var evaluator = MatchEvaluator.of(MatchType.REGEX, true);
