import android.util.Log;

module DebugLog {
   var mLoggingEnabled: Boolean = true;

   public setDebugLogging(enabled: Boolean) {
      mLoggingEnabled = enabled;
   }
   
    public v(tag: String, msg: String): Integer {
        var result: Integer = 0;
        if (mLoggingEnabled) {
           result = Log.v(tag, msg);
        }
        return result;
    }

   public v(tag: String, msg: String, tr: Throwable): Integer {
      var result: Integer = 0;
       if (mLoggingEnabled) {
          result = Log.v(tag, msg, tr);
       }
       return result;    
   }

