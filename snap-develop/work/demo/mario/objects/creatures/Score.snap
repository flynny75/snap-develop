import awt.image.BufferedImage;

import mario.core.animation.Animation;
import mario.core.tile.TileMap;
import mario.objects.base.Creature;
import mario.util.ImageManipulator;



class Score extends Creature {
   
   public var oneHundred: Animation;
   
   public new(x: Integer, y: Integer): super(x, y) {
      setIsItem(true);
      
      dy = -0.45f;

      var one_hundred: BufferedImage = ImageManipulator.loadImage("/mario/resources/items/Score_100_New6.png");

      oneHundred = new DeadAfterAnimation(this);
      
      oneHundred.addFrame(one_hundred, 380);
      oneHundred.addFrame(one_hundred, 380);   
      setAnimation(oneHundred);
   }
   
   public updateCreature(map: TileMap, time: Integer) {
      this.update(time);
      y = y + dy * time;
      if(dy < 0) {
         dy = dy + 0.032f;
      } else {
         dy = 0;
      }
   }
   
   class DeadAfterAnimation extends Animation {
      const creature; Creature;
      
      new(creature: Creature) {
         this.creature = creature;
      }
      
      public endOfAnimationAction() {
         creature.kill();
      }
   }

}

