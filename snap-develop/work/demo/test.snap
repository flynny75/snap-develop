
class ConnectListener {

   const builder;
   
   new(builder: ProjectBuilder) {
      this.builder = builder;
   }
   
   connect(listener: CommandListener, path: Path) {
      var script = CommandLineArgument.SCRIPT.getValue();
      
      if(script != null) {
         try {
            var project = builder.createProject(path);
            var projectPath = project.getProjectPath();
            var projectName = project.getProjectName();
            var file = new File(projectPath, "/" + script);
            var input = new FileInputStream(file);
            var buffer = new ByteArrayOutputStream();
            var chunk = new Byte[1024];
            var count = 0;
            
            while((count = input.read(chunk))!=-1) {
               buffer.write(chunk, 0, count);
            }
            input.close();
            buffer.close();
            
            var source = buffer.toString("UTF-8");
            var system = System.getProperty("os.name");
            var command = new ExecuteCommand(projectName, system, script, source, {});
            
            listener.onExecute(command);
         } catch(e) {
            e.printStackTrace();
         }
      }
   }
}